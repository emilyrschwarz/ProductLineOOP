                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label fx:id="productNameLabel" prefHeight="21.0" prefWidth="96.0" text="Product Name" />
